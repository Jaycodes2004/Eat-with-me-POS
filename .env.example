# POS Backend Environment Variables
# Local Development Setup

# JWT Secret
JWT_SECRET=your_jwt_secret_key_change_this_locally

# Server Port
PORT=5000
NODE_ENV=development

# Master Database Configuration (Admin)
# Main database for admin/master data
MASTER_DB_USER=postgres
MASTER_DB_PASS=postgres
MASTER_DB_HOST=localhost
MASTER_DB_PORT=5432
MASTER_DB_NAME=master_db

# Master Database URL (Prisma)
MASTE_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/master_db?schema=master

# Tenant Database Configuration
# Individual tenant database
DATABASE_URL_TENANT=postgresql://postgres:postgres@localhost:5432/tenant_db?schema=public

# Frontend URLs
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:localhost,http://192.168.1.1:3000

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379
ENABLE_REDIS=false

# Logging
LOG_LEVEL=debug
